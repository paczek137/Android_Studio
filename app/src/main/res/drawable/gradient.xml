<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#52a4ef" />
            <stroke
                android:width="2dp"
                android:color="#245684" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <item> <!-- default state -->
        <shape>
            <gradient
                android:startColor="#52a4ef"
                android:endColor="#245684"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="#245684" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>